body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    font-size: 16px;
    line-height: 1.6
    text-align: center;
    background-color: #f4f4f4;
    width: 100%;
}

header {
    background-color: #00457C;
    color: white;
    padding: 20px;
}

nav {
    background: #0077B6;
    padding: 10px;
}

nav ul {
    list-style: none;
    padding: 0;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap; /* Ensure items wrap on smaller screens */
}

nav ul li {
    padding: 8px;
}

nav ul li a {
    text-decoration: none;
    color: white;
    font-weight: bold;
    display: block;
}

section {
    display: flex;
    flex-wrap: wrap;
    padding: 20px;
    justify-content: space-between;
}

.program {
    background: white;
    padding: 20px;
    margin: 10px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: transform 0.3s ease-in-out;
    width: 100%;
    max-width: 400px;
    text-align: center;
}

.program:hover {
    transform: scale(1.05);
}

button {
    background: #009688;
    color: white;
    border: none;
    padding: 12px;
    cursor: pointer;
    font-size: 1em;
    border-radius: 5px;
    width: 100%;
    max-width: 250px;
}

button:hover {
    background: #00695C;
}

footer {
    background: #002B5B;
    color: white;
    padding: 10px;
    position: relative;
    bottom: 0;
    width: 100%;
}

