/* Enhanced Mobile Responsiveness */
@media (max-width: 1024px) {
    section {
        justify-content: center;
    }

    .program {
        width: 80%;
    }
}

@media (max-width: 768px) {
    nav ul {
        flex-direction: column;
        text-align: center;
    }

    .program {
        width: 90%;
    }

    button {
        font-size: 1.1rem;
    }
}

@media (max-width: 480px) {
    body {
        font-size: 14px;
    }

    .program {
        width: 95%;
    }

    button {
        font-size: 1rem;
        padding: 12px;
    }
}

@media (max-width: 360px) {
    body {
        font-size: 13px;
    }

    .program {
        width: 100%;
    }

    button {
        font-size: 0.9rem;
        padding: 10px;
    }
}
